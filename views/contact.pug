extends base.pug

block scripts 
    script(src="/static/index.js")

block style 
    style 
        include ../static/style.css
        include ../static/stylecontact.css

block content 
    div.container
        h1 contact us
        form(action="/contact", method="post",class="myform")
            input(type="text", name="name",placeholder="Enter your name",class="myinput")
            input(type="phone", name="phonenumber",placeholder="Enter your mobile number",class="myinput")
            input(type="email", name="email",placeholder="Enter your email address",class="myinput")
            input(type="text", name="address",placeholder="Enter your address",class="myinput")
            input(type="text", name="desc",placeholder="Enter your concern",class="myinput")
            button(type="submit") 
                | Submit 